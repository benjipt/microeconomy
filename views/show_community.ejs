<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head.ejs') %>
</head>
<body>
    <div class="container text-center mt-5">
        <h1>All Communities</h1>
        <div class="row align-items-center mt-5">
            <% for (let i=0; i<communities.length; i++) {%>
            <div class="col-3">
                <a href="/community/<%= communities[i].id %>">
                    <div class="card">
                        <h5 class="card-title"><%= communities[i].name %></h5>
                        <p class="card-text"><%= communities[i].description %></p>
                        <a href="/community/<%= communities[i].id %>/edit" class="btn btn-warning">Edit</a>
                    </div>
                </a>
            </div>
            <% } %>  
        </div>
        <div class="container mt-5">
            <a href="/new" class="btn btn-primary">Create New</a>
        </div>
        <div class="container mt-3">
            <a href="/" class="btn btn-light">Home</a>
        </div>
    </div>
</body>
</html>